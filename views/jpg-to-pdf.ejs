<%- include('header') %>

<div class="container">
  <section class="hero">
    <h1>JPG to PDF Converter</h1>
    <p>Convert your JPG images to PDF documents</p>
  </section>

  <div class="upload-area" id="uploadArea">
    <div class="upload-area-icon">üñºÔ∏è</div>
    <h3>Drop your JPG files here</h3>
    <p>or click to browse (you can select multiple images)</p>
    <input type="file" id="imageFiles" class="file-input" accept="image/jpeg,image/jpg,image/png" multiple>
    <button class="btn btn-primary" onclick="document.getElementById('imageFiles').click()">Select Images</button>
    <div class="file-list" id="fileList"></div>
  </div>

  <div class="processing" id="processing">
    <div class="spinner"></div>
    <h3>Converting your images...</h3>
    <p>This may take a few moments</p>
  </div>

  <div class="result-section" id="resultSection">
    <div class="success-icon" id="successIcon">‚úì</div>
    <div class="error-icon" id="errorIcon" style="display: none;">‚úó</div>
    <h2 id="resultTitle">Conversion Successful!</h2>
    <p id="resultMessage"></p>
    <a href="#" id="downloadBtn" class="btn btn-primary" style="display: none;">Download PDF</a>
    <button class="btn btn-secondary" onclick="location.reload()">Convert More Images</button>
  </div>
</div>

<script src="/js/jpg-to-pdf.js"></script>

<%- include('footer') %>
